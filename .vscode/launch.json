  "version": "0.2.0",
  "configurations": [
    {
      "name": "Python: Flask",
      "type": "debugpy",
      "request": "launch",
      "program": "${workspaceFolder}/backend/app.py", // Path to your main Flask file
      "args": ["-Xfrozen_modules=off", "run", "--no-debugger", "--no-reload"],
      "jinja": true,
      "env": {
        "FLASK_APP": "${workspaceFolder}/backend/app.py", // Path to your main Flask file
        "FLASK_ENV": "development"
      },
      "envFile": "${workspaceFolder}/backend/.env",
      "console": "integratedTerminal",
      "python": "${workspaceFolder}/backend/venv/bin/python",
      "cwd": "${workspaceFolder}/backend"
    }
  ]
}
